{
    "name": "nestjs-microservices-mqtt",
    "version": "0.0.6",
    "description": "MQTT is a machine-to-machine (M2M)/Internet of Things connectivity protocol",
    "author": "Hebert Barros <hebert@hotbrains.com.br>",
    "private": true,
    "license": "UNLICENSED",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "engines": {
        "node": ">=16.18",
        "npm": ">=8.18"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.(js|ts|md|mjs|cjs)\"",
        "start:worker": "node scripts/worker.cjs",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare:enviroment": "node scripts/dev-enviroment.cjs",
        "lint": "eslint src --ext .js,.ts",
        "lint:fix": "eslint src --fix --ext .js,.ts",
        "prepare": "husky install",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "@nestjs/core": "9.3.9",
        "@nestjs/mapped-types": "2.0.5",
        "@nestjs/microservices": "^9.3.9",
        "@nestjs/platform-express": "9.4.3",
        "@nestjs/schematics": "10.1.1",
        "class-transformer": "0.5.1",
        "dotenv": "16.4.5",
        "express": "4.19.2",
        "mqtt": "^5.5.5",
        "nest-shared": "^5.0.4",
        "rimraf": "4.4.0",
        "tsyringe": "4.8.0",
        "yup": "1.4.0"
    },
    "devDependencies": {
        "@babel/cli": "7.24.5",
        "@babel/core": "7.24.4",
        "@babel/node": "7.23.9",
        "@babel/preset-env": "7.24.5",
        "@nestjs/cli": "9.4.2",
        "@nestjs/testing": "9.4.3",
        "@types/dotenv": "8.2.0",
        "@types/express": "4.17.21",
        "@types/jest": "29.5.12",
        "@types/node": "^20.12.7",
        "@types/supertest": "6.0.2",
        "@typescript-eslint/eslint-plugin": "5.59.0",
        "@typescript-eslint/parser": "5.62.0",
        "@typescript-eslint/typescript-estree": "7.8.0",
        "eslint": "8.57.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-prettier": "5.1.3",
        "husky": "9.0.11",
        "jest": "29.7.0",
        "prettier": "3.2.5",
        "supertest": "7.0.0",
        "ts-jest": "29.1.2",
        "ts-loader": "9.5.1",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.4.5"
    },
    "optionalDependencies": {
        "@nestjs/common": "^9.4.0",
        "class-validator": "^0.14.0",
        "reflect-metadata": "^0.1.14",
        "rxjs": "^6.0.0 || ^7.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
